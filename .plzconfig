[parse]
preloadsubincludes = ///go//build_defs:go

[build]
LinkGeneratedSources = true
DownloadLinkable = true
UpdateGitignore = true

[Plugin "go"]
Target = //plugins:go
ImportPath = github.com/please-build/puku
GoTool = //third_party/go:toolchain|go
ModFile = //:mod
RequireLicences = true
Stdlib = //third_party/go:std
CgoEnabled = true

[Plugin "cc"]
target = //plugins:cc
defaultoptcppflags = --std=c++11 -O2 -DNDEBUG -Wall -Wextra -Werror -Wno-unused-parameter
defaultdbgcppflags = --std=c++11 -g3 -DDEBUG -Wall -Wextra -Werror -Wno-unused-parameter

[Alias "puku"]
Cmd = run //cmd/puku --
PositionalLabels = true
Desc = A tool to update BUILD files in Go packages

[alias "lint"]
Desc = Runs golangci-lint as done by our CI
cmd = run //third_party/binary:golangci-lint -- run

[BuildConfig]
go-version = 1.23.2
